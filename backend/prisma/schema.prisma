// backend/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Workspace {
  id             String             @id @default(uuid())
  name           String
  slug           String             @unique
  description    String?
  isActive       Boolean            @default(true)
  apiDefinitions ApiDefinition[]
  auditLogs      AuditLog[]
  members        WorkspaceMember[]
  slackIntegration SlackIntegration?
  samlConfig     SamlConfig?
  customDomain   CustomDomain?
  // White-labeling
  logoUrl        String?
  primaryColor   String?   @default("#667eea")
  secondaryColor String?   @default("#764ba2")
  footerText     String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@map("workspaces")
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        Role      @default(VIEWER)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

model ApiDefinition {
  id          String        @id @default(uuid())
  workspaceId String
  workspace   Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  name        String
  slug        String
  version     String        @default("1.0.0")
  basePath    String        @default("/")
  description String?
  isActive    Boolean       @default(true)
  isLatest    Boolean       @default(true)
  tags        String[]
  endpoints   ApiEndpoint[]
  websocketEndpoints WebSocketEndpoint[]
  // Versioning
  parentId    String?       // Reference to previous version
  parent      ApiDefinition? @relation("ApiVersions", fields: [parentId], references: [id], onDelete: SetNull)
  versions    ApiDefinition[] @relation("ApiVersions")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([workspaceId, slug, version])
  @@map("api_definitions")
}

model ApiEndpoint {
  id              String        @id @default(uuid())
  apiId           String
  api             ApiDefinition @relation(fields: [apiId], references: [id], onDelete: Cascade)
  method          String
  path            String
  summary         String?
  requestSchema   Json?
  responses       Json          // array de posibles responses
  delayMs         Int           @default(0)
  enabled         Boolean       @default(true)
  // GraphQL support
  type            String        @default("REST") // REST | GRAPHQL
  operationName   String?       // for GraphQL
  operationType   String?       // query | mutation | subscription
  // Proxy Mode
  proxyMode       Boolean       @default(false)
  proxyTarget     String?       // Target URL to forward to
  proxyHeaders    Json?         // Headers to add/remove/transform
  proxyTimeout    Int           @default(5000) // Timeout in milliseconds
  // Request Deduplication
  deduplication   Boolean       @default(false)
  // Caching
  cacheEnabled    Boolean       @default(false)
  cacheTTL        Int           @default(3600) // seconds
  cacheControl    String        @default("public") // public | private
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([apiId, method, path])
  @@map("api_endpoints")
}

model User {
  id                String             @id @default(uuid())
  email             String             @unique
  password          String             // bcrypt hash
  name              String?
  role              String             @default("user") // user | admin (global role)
  isActive          Boolean            @default(true)
  // Two-Factor Authentication
  twoFactorSecret   String?
  twoFactorEnabled  Boolean            @default(false)
  apiKeys           ApiKey[]
  auditLogs         AuditLog[]
  workspaceMemberships WorkspaceMember[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@map("users")
}

model ApiKey {
  id          String   @id @default(uuid())
  key         String   @unique // hash del key real
  name        String   // nombre descriptivo
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scopes      String[] // e.g., ["read:apis", "write:endpoints"]
  workspaceId String?  // Limit key to specific workspace
  isActive    Boolean  @default(true)
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("api_keys")
}

model MockRequest {
  id            String   @id @default(uuid())
  workspaceId   String?
  apiSlug       String
  endpointId    String?
  method        String
  path          String
  statusCode    Int
  durationMs    Int
  userAgent     String?
  ip            String?
  error         String?
  // Advanced Analytics
  requestSize   Int?      // Bytes
  responseSize  Int?      // Bytes
  geoCountry    String?
  geoCity       String?
  deduplicated  Boolean   @default(false) // Was this request deduplicated?
  proxied       Boolean   @default(false) // Was this request proxied?
  createdAt     DateTime @default(now())

  @@index([workspaceId, apiSlug, createdAt])
  @@index([apiSlug, createdAt])
  @@index([createdAt])
  @@index([geoCountry])
  @@map("mock_requests")
}

model WebhookSubscription {
  id          String   @id @default(uuid())
  workspaceId String?
  apiId       String?  // optional: subscribe to specific API
  targetUrl   String
  eventType   String   // mock.request.received | mock.response.sent
  isActive    Boolean  @default(true)
  secret      String?  // for signing
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workspaceId, isActive])
  @@map("webhook_subscriptions")
}

model WebSocketEndpoint {
  id          String        @id @default(uuid())
  apiId       String
  api         ApiDefinition @relation(fields: [apiId], references: [id], onDelete: Cascade)
  path        String        // e.g., /ws/notifications
  events      Json          // Array of event definitions { name, payload, interval? }
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([apiId, path])
  @@map("websocket_endpoints")
}

model AuditLog {
  id          String    @id @default(uuid())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String?
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  action      String    // create | update | delete
  entityType  String    // api | endpoint | workspace | webhook | user
  entityId    String
  entityName  String?   // Human-readable name for display
  changes     Json?     // Before/after values { before: {...}, after: {...} }
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime  @default(now())

  @@index([workspaceId, createdAt])
  @@index([userId, createdAt])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

model SlackIntegration {
  id          String    @id @default(uuid())
  workspaceId String    @unique
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  webhookUrl  String
  events      String[]  // ["api.created", "rate_limit.exceeded", etc.]
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("slack_integrations")
}

model SamlConfig {
  id                String    @id @default(uuid())
  workspaceId       String    @unique
  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  entityId          String    // SAML Entity ID
  ssoUrl            String    // Single Sign-On URL
  certificate       String    @db.Text // X.509 Certificate (PEM format)
  attributeMapping  Json      // Map SAML attributes to user fields { email: "emailAddress", name: "displayName", role: "role" }
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("saml_configs")
}

model CustomDomain {
  id              String    @id @default(uuid())
  workspaceId     String    @unique
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  domain          String    @unique // e.g., api.example.com
  verificationTxt String    // TXT record value for verification
  isVerified      Boolean   @default(false)
  sslEnabled      Boolean   @default(false)
  sslCertificate  String?   @db.Text // SSL certificate (PEM)
  sslPrivateKey   String?   @db.Text // SSL private key (PEM)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("custom_domains")
}

